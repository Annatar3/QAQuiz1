import unittest
from selenium import webdriver
from actions import MainPage, LoginPage, AccountPage

class TestLoginAndDeleteAccount(unittest.TestCase):
    def setUp(self):
        self.driver = webdriver.Chrome()
        self.driver.get('http://automationexercise.com')
        self.main_page = MainPage(self.driver)
        self.login_page = LoginPage(self.driver)
        self.account_page = AccountPage(self.driver)

    def tearDown(self):
        self.driver.quit()

    def test_login_and_delete_account(self):
      
        self.main_page.click_signup_login_button()

       
        self.assertTrue(self.login_page.verify_login_to_account_text())

       
        self.login_page.login(email="johndoe@example.com", password="Password123")

        
        self.login_page.click_login_button()

       
        self.assertTrue(self.account_page.verify_logged_in_as_text())

       
        self.account_page.click_delete_account_button()

        
        self.assertTrue(self.account_page.verify_account_deleted_text())

if __name__ == "__main__":
    unittest.main()
